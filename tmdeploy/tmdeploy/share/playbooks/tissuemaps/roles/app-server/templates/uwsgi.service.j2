[Unit]
Description=TissueMAPS running on the uWSGI application server
After=syslog.target network.target remote-fs.target basic.target

[Service]
Type=notify
User={{ tm_user }}
Group={{ tm_group }}
Environment="HOME={{ tm_home }}"
ExecStart={{ tm_home }}/.tmaps/uwsgi.sh
PIDFile=/var/run/uwsgi/tissuemaps.pid
Restart=always
KillSignal=SIGTERM
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
