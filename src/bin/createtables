#!/usr/bin/env python
import argparse

import tmlib.models


def create_tables(db_uri=None, xl=False):
    '''Creates all tables defined by declarative classes in
    :py:package:`tmlib.models`.

    Parameters
    ----------
    db_uri: str
        URI of the database
    '''
    engine = tmlib.models.utils.create_db_engine()
    tmlib.models.Model.metadata.create_all(engine)


if __name__ == '__main__':

    parser = argparse.ArgumentParser('Create tables in TissueMAPS database.')
    parser.add_argument(
        '--uri', destination='db_uri', help='database URI', default=None
    )

    args = parser.parse_args()

    create_tables(args.db_uri)
