#!/usr/bin/env python
import argparse

import tmlib.models as tm


def create_tables(db_uri=None):
    '''Creates all tables defined by declarative classes in
    :py:package:`tmlib.models`.

    Parameters
    ----------
    db_uri: str
        URI of the database
    '''
    if db_uri is None:
        try:
            db_uri = os.environ['TMAPS_DB_WEB_URL']
        except KeyError:
            raise OSError('Environment variable "TMAPS_DB_WEB_URL" not set.')
    engine = tm.utils.create_db_engine(db_uri)
    tm.MainModel.metadata.create_all(engine)


if __name__ == '__main__':

    parser = argparse.ArgumentParser('Create tables in TissueMAPS database.')
    parser.add_argument(
        '--uri', dest='db_uri', help='database URI', default=None
    )

    args = parser.parse_args()

    create_tables(args.db_uri)
