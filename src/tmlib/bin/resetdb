#!/bin/bash
#
# Create a .pgpass file: 
#
#  echo "172.23.169.105:5432:*:psql:mypass" > ~/.pgpass && chmod 0600 ~/.pgpass
#
# Replace mypass with the password for your user and psql user if required.

# Change this host to a correct *-db001 ip address
HOST=172.23.169.105
export PGPASSFILE=~/.pgpass
#echo $PGPASSFILE

psql -h $HOST postgres psql << EOS
DROP DATABASE tissuemaps;
CREATE DATABASE tissuemaps;
EOS

psql -h $HOST tissuemaps psql << EOS
CREATE EXTENSION postgis;
EOS

# Finally run createtables
if [ -f ./createtables ]; then
	./createtables
fi
